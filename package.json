{
  "name": "m3-css-color-token-generator",
  "private": true,
  "version": "0.0.4",
  "description": "Material Design 3 CSS custom properties color token generator.",
  "main": "dist/setThemeFromHexColor.js",
  "module": "dist/setThemeFromHexColor.mjs",
  "types": "dist/setThemeFromHexColor.d.ts",
  "scripts": {
    "dev": "vite",
    "build:demo": "tsc && vite build",
    "preview": "vite preview",
    "build": "tsup src/setThemeFromHexColor.ts --format cjs,esm --dts",
    "lint": "tsc"
  },
  "keywords": [
    "css",
    "material-design",
    "m3",
    "custom-properties"
  ],
  "dependencies": {
    "@material/material-color-utilities": "^0.2.7"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "tsup": "^8.0.2",
    "typescript": "^5.2.2",
    "vite": "^5.1.0"
  },
  "exports": {
    "./theme/light": "./theme/light.css",
    "./theme/dark": "./theme/dark.css"
  },
  "files": [
    "src/setThemeFromHexColor.js",
    "/theme"
  ]
}
