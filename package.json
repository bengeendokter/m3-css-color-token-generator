{
  "name": "m3-css-color-token-generator",
  "private": true,
  "version": "0.0.10",
  "description": "Material Design 3 CSS custom properties color token generator.",
  "module": "dist/setThemeFromHexColor.mjs",
  "types": "dist/setThemeFromHexColor.d.mts",
  "scripts": {
    "dev": "vite",
    "build:demo": "tsc && vite build",
    "preview": "vite preview",
    "build": "tsup src/setThemeFromHexColor.ts --format esm --dts",
    "lint": "tsc"
  },
  "keywords": [
    "css",
    "material-design",
    "m3",
    "custom-properties"
  ],
  "dependencies": {
    "@material/material-color-utilities": "^0.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vite": "^5.2.11"
  },
  "exports": {
    ".": "./dist/setThemeFromHexColor.mjs",
    "./theme/light": "./theme/light.css",
    "./theme/dark": "./theme/dark.css"
  },
  "files": [
    "/src/setThemeFromHexColor.js",
    "/theme",
    "/dist"
  ]
}
